                                                      week-2
create table interns(
    name varchar(100) not null ,
    surname varchar not null ,
    age int check ( age>0 ) not null ,
    hobby varchar
);


create table employees(
    name varchar(100) not null ,
    surname varchar not null ,
    job_title varchar not null
);


