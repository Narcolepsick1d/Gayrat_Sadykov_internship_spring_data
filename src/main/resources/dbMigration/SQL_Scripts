                                                       week-3
ALTER table employees ADD column id int primary key generated by default as identity ;
ALTER table interns ADD column id int primary key generated by default as identity ;
create table ROLES(
                      id int primary key generated by default as identity ,
                      role varchar(100) not null ,
                      name varchar(100) not null

);

create table USERS(
                      id int primary key generated by default as identity,
                      name varchar(100)  not null ,
                      surname varchar not null ,
                      age int check ( age>0 ) not null ,
                      email varchar(100)    not null ,
                      password varchar(100) not null,
                      role_id int  references ROLES(id),
                      isactive bool

);
CREATE TABLE user_role(
                         user_id int  ,
                          role_id int ,
                    constraint fk_users foreign key (user_id) references users(id) on delete set null ,
                    constraint fk_role foreign key (role_id) references roles(id)on delete set null
);

INSERT into ROLES(role, name) VALUES('ROLE_MENTOR','Ментор');
INSERT into ROLES(role, name) VALUES('ROLE_MANAGER','Менеджер');
INSERT into ROLES(role, name) VALUES('ROLE_ADMIN','Админ');

Insert into user_role(user_id, role_id) VALUES (1,1);
Insert into user_role(user_id, role_id) VALUES (2,1);
